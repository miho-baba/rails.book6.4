
<% if book.favorited_by?(current_user) %>
  <td>
    <%= link_to book_favorites_path(book), class: 'text-danger', method: :delete, remote: true, data: {"turbolinks" => false} do %>
      <i class="fas fa-heart"></i><%= book.favorites.count %>
    <% end %>
  </td>
    <% else %>
      <td>
        <%= link_to book_favorites_path(book), class: 'text-primary', method: :post, remote: true, data: {"turbolinks" => false} do %>
          <i class="fas fa-heart"></i><%= book.favorites.count %>
    <% end %>
      </td>
<% end %>